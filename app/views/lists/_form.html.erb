
<div class= 'container-fluid'>
	<div class= "jumbotron">
		<h2>New List</h2>
			<p><%= form_for @list do |f| %>
				<div class="form-group col-sm-3">
            <%= f.label :list_name %>
            <%= f.text_field :name, class: "form-control" %>
        </div><br />

        <div class="row">
          <div class="col-md-6">
    				<%= collection_check_boxes :list, :item_ids, @items, :_id, :item_name %>
    			</div>
				</div>

        <div class="row">
          <div class="col-sm-3">
            <%= f.submit 'Save List', class: "btn btn-lg btn-success"%>
          </div>
        </div>
			  </p>
		  <% end %>

	</div>
</div>